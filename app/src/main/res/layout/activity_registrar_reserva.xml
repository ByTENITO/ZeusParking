<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Registrar_Reserva">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo ZeusPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/zeuspass" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="72dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Reserva de Parqueadero"
                android:textColor="@color/Texto_pastel"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- TimePicker con mejor estilo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/Principal"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Seleccione hora de reserva"
                        android:textColor="@color/Texto_pastel"
                        android:textSize="16sp"/>

                    <TimePicker
                        android:id="@+id/timePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contenedor para selección de vehículo -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vehicleSelectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/Principal"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Botón para seleccionar vehículo -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectVehicle"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Seleccionar Vehículo"
                        android:textColor="@color/Texto_pastel"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        app:strokeColor="@color/Principal"
                        app:icon="@drawable/ic_carro"
                        app:iconGravity="textStart"/>

                    <!-- Información del vehículo seleccionado -->
                    <LinearLayout
                        android:id="@+id/selectedVehicleInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="12dp"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvVehicleType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo:"
                            android:textColor="@color/Texto_pastel"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvVehicleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Número:"
                            android:textColor="@color/Texto_pastel"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Estado vacío -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/Secundario"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvEmptyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No se encontraron vehículos"
                        android:textColor="@color/Texto_pastel"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTryAgain"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Reintentar"
                        android:textColor="@color/Texto_pastel"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:backgroundTint="@color/Principal"
                        app:cornerRadius="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón de Reserva -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/Reserva_BTN"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/reservar"
                android:textColor="@color/Texto_pastel"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="@color/Principal"
                app:cornerRadius="6dp"
                app:iconGravity="textStart"
                app:iconTint="@color/Texto_pastel"/>

            <!-- Información de horario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Horario de reservas: 6:00 AM - 10:00 PM"
                android:textColor="@color/Texto_pastel"
                android:textSize="14sp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>