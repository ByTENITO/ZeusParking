<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/Principal"
    app:strokeWidth="1dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/Navegacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pc"
            android:layout_marginEnd="16dp"
            app:tint="@color/Principal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marca_portatil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Texto_pastel"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/modelo_portatil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B3FFFFFF"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/serial_portatil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#B3FFFFFF"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>