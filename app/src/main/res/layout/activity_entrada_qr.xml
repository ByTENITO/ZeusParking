<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".QrActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo ZeusPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/zeuspass" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título Principal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Código QR de Entrada"
                android:textColor="@color/Texto_pastel"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Escanea para ingresar al parqueadero"
                android:textColor="@color/Texto_pastel"
                android:textSize="14sp" />

            <!-- Contenedor QR Principal -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/qrCard"
                android:layout_width="340dp"
                android:layout_height="400dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- QR Grande -->
                    <ImageView
                        android:id="@+id/ivCodigoSalida"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter" />

                    <!-- Fecha y Hora -->
                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="25/04/2025 - 14:30"
                        android:textColor="@color/Principal"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Estado Vacío -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutEmptyState"
                android:layout_width="340dp"
                android:layout_height="400dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <TextView
                        android:id="@+id/tvEmptyMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="No tienes vehículos disponibles\npara generar QR"
                        android:textColor="@color/Negro"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="6dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTryAgain"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="32dp"
                        android:text="Intentar de nuevo"
                        android:textColor="@color/Texto_pastel"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/Principal"
                        app:cornerRadius="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Reserva -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/irReserva"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:text="Hacer Reserva de Parqueadero"
                android:textColor="@color/Texto_pastel"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/Principal"
                app:cornerRadius="12dp"/>

            <!-- Información adicional -->
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="• Presenta este código al ingresar\n• Válido solo para el vehículo seleccionado\n• No compartas tu código QR"
                android:textColor="@color/Texto_pastel"
                android:textSize="13sp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Navegacion"
        app:itemIconTint="@drawable/nav_item_color"
        app:itemTextColor="@drawable/nav_text_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>