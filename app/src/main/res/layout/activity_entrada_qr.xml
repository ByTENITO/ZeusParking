<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".QrActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="64dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo ZeusPass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/zeuspass" />

    <!-- Contenedor Principal con Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="72dp"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="17dp">

            <!-- Tarjeta QR (más compacta) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/qrCard"
                android:layout_width="280dp"
                android:layout_height="320dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- QR Image (ligeramente más pequeño) -->
                    <ImageView
                        android:id="@+id/ivCodigoSalida"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:scaleType="fitCenter" />

                    <!-- Fecha/Hora -->
                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivCodigoSalida"
                        android:layout_centerHorizontal="true"
                        android:padding="6dp"
                        android:textColor="@color/Negro"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="25/04/2025 - 14:30" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Texto Reserva -->
            <TextView
                android:id="@+id/Reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:textColor="@color/Texto_pastel"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="¿Desea reservar?" />

            <!-- Formulario de Reserva (más compacto) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/Principal"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Spinner de Tipo -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinnerContainer"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Tipo"
                        app:boxStrokeColor="@color/Principal"
                        app:hintTextColor="@android:color/white">

                        <Spinner
                            android:id="@+id/Tipos_SpinnerQR"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/Navegacion"
                            android:popupBackground="@color/Navegacion"
                            android:textColor="@color/Texto_pastel" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxStrokeColor="@color/Principal"
                        app:errorEnabled="true"
                        app:hintTextColor="@color/Texto_pastel">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/numero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/Texto_pastel"
                            android:textColorHint="@color/Texto_pastel" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón de Reserva -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/Reserva_BTN"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/reservar"
                        android:textColor="@color/Texto_pastel"
                        app:backgroundTint="@color/Principal"
                        app:cornerRadius="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Navegacion"
        android:elevation="16dp"
        app:itemIconTint="@drawable/nav_item_color"
        app:itemTextColor="@drawable/nav_text_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>