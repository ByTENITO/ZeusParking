<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".DatosUsuarioSalida">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="12dp">

            <!-- Compact Title -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/DatosUsuarioSalida"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:text="Datos de Usuario"
                android:textColor="@color/Texto_pastel"/>

            <!-- Compact User Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/Navegacion"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/Principal"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="Foto del Usuario"
                        android:textColor="@color/Texto_pastel"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/fotoUsuarioSalida"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="12dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircleImage"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/correoTXTSalida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Correo:"
                                android:textColor="@color/Texto_pastel"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/correoFirebaseSalida"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="No disponible"
                                android:textColor="@color/Blanco"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/nombreTXTSalida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre:"
                                android:textColor="@color/Texto_pastel"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/nombreFirebaseSalida"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="No disponible"
                                android:textColor="@color/Blanco"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/apellidoTXTSalida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apellido:"
                                android:textColor="@color/Texto_pastel"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/apellidoFirebaseSalida"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="No disponible"
                                android:textColor="@color/Blanco"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Compact Vehicle Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/Navegacion"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/Principal"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:text="Foto del VehÃ­culo"
                        android:textColor="@color/Texto_pastel"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/fotoBiciSalida"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="12dp"
                        android:contentDescription="@string/todo"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CircleImage"
                        tools:srcCompat="@tools:sample/avatars" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/colorTXTSalida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Color:"
                                android:textColor="@color/Texto_pastel"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/colorFirebaseSalida"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="No disponible"
                                android:textColor="@color/Blanco"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/idVehiculoTXTSalida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Placa - Num Marco:"
                                android:textColor="@color/Texto_pastel"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/idVehiculoFirebaseSalida"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="No disponible"
                                android:textColor="@color/Blanco"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tipoVehiculoTXTSalia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo:"
                                android:textColor="@color/Texto_pastel"
                                android:textSize="14sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tipoVehiculoFirebaseSalida"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="No disponible"
                                android:textColor="@color/Blanco"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Compact Exit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/SalidaExit"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Listo"
                android:textSize="15sp"
                app:backgroundTint="@color/Principal"
                app:cornerRadius="22dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>