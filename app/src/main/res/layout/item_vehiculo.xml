<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@color/Principal"
    app:strokeWidth="1dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/Navegacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tipo de vehículo (arriba) -->
        <TextView
            android:id="@+id/tipo_vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/Texto_pastel"
            android:layout_marginBottom="8dp"/>

        <!-- Número (medio) -->
        <TextView
            android:id="@+id/numero_vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginBottom="4dp"/>

        <!-- Color (abajo) -->
        <TextView
            android:id="@+id/color_vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#B3FFFFFF"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>